rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 사용자 데이터: 본인만 접근 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // 아기 데이터: 부모만 접근 가능
      match /babies/{babyId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // 활동 기록
        match /activities/{activityId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }

        // 선호도 데이터
        match /preferences/{prefId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }

    // 기본 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
